	</bean>-->
    <bean id="dbItemReader" class="org.mybatis.spring.batch.MyBatisPagingItemReader" scope="prototype">
        <property name="sqlSessionFactory" ref="sqlSessionFactory" />
        <property name="pageSize" value="1000"/>
        <property name="queryId" value="com.brilliance.batch.mapper.db.mapper.getMaxWorkDate" />
